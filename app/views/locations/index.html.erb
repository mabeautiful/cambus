<h2>Show all locations</h2>

<% @locations.each do |location| %>
	<%= location.name %> 
	<%= link_to "Edit", edit_location_path(location) %> | 
	<%= link_to "Delete", location, method: :delete, data: {confirm: "Are you sure?"} %><br>	
<% end %>

<p>
	<%= link_to "add location", new_location_path, class: "btn btn-primary btn-xs" %>
</p>