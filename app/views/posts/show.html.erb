<div class="row">
  <div class="col-md-3">
    <%= render 'search' %>
  </div>
  <div class="col-md-9">
    <ol class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li><%= @post.property_type.property_name %></li>
    </ol>
        <h3><%= @post.title %></h3>
        <% if user_signed_in? %>
          <% if current_user.id == @post.user_id || current_user.role_id == 4 %>
            <div class="edit-post">
              <%= link_to edit_post_path(@post) do %>
                <span class="edit-post btn btn-primary btn-sm"><i class="fa fa-pencil-square-o"></i> Edit post</span>
              <% end %>
              <%= link_to @post, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" do %>
                <i class="fa fa-times"></i> Delete
              <% end %>
            </div>
          <% end %>
        <% end %>
    <hr>
    <p>
      <strong>Contract:</strong>
      <%= @post.post_type %>
      | Posted on <%= @post.created_at.strftime("%d-%m-%Y") %>
    </p>
    <div class="row">
      <div class="col-md-7">
        <ul class="bxslider">
          <% @post.photos.each do |photo| %>
            <li>
              <%= image_tag photo.image.url %>
            </li>
          <% end %>
        </ul>
        <div id="bx-pager">
          <% 
            $i = 0;
            @post.photos.each do |thumb|
          %>
            <a data-slide-index="<%= $i %>" href=""><%= image_tag thumb.image.url(:thumb) %></a>
          <%
                $i +=1
            end
          %>  
        </div>
      </div>
      <div class="user-detail col-md-5">
        <div class="profile-info">
          <div class="panel panel-primary">
            <div class="panel-heading">
              Contact Info
            </div>
            <div class="panel-body">
              <% @profile =  @post.user.profile %>
              <ul>
                <li><i class="fa fa-user"></i> <%= @profile.first_name.present? ? @profile.first_name : "N/A" %></li>
                <li><i class="fa fa-phone"></i> <%= @profile.phone.present? ? @profile.phone : "N/A" %></li>
                <li><i class="fa fa-envelope"></i> <%= @profile.email.present? ? @profile.email : "N/A" %></li>
              </ul>
            </div>
          </div>  
        </div>
      </div>
    </div>
    
    <p><strong>Description</strong></p>
    <p>
      <%= @post.description %>
    </p>
    <%= link_to 'Edit', edit_post_path(@post) %>
  </div>
  <div class="col-md-6 show-description">
    

  </div>
</div>
