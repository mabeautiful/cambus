<h2 class="text-center">Log in</h2>
<hr>
<div class="container-min">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :login, "Username or Email" %><br />
      <%= f.text_field :login, autofocus: true, placeholder: "Enter username or email", class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password", class: "form-control" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="checkbox-inline checkbox checkbox-success">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        
      </div>
    <% end -%>
  
    <div class="form-group">
      <%= f.submit "Log in", class: "btn btn-success" %>
    </div>
  <% end %>
  <p>
    If you don't have an account yet, please <%= render "devise/shared/links" %>
  </p>
  

</div>
