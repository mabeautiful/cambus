<div class="home-container">
	<h2 class="text-center">Listing Posts</h2>
	<hr>
			<div class="panel panel-primary">
				<div class="panel-heading">
					Recent posts
				</div>
				<div class="panel-body">
					<div class="row">
						<% @posts.each do |post| %>
							<div class="col-sm-4 col-md-3 post-box">
								<div class="img-container">
									<%= image_tag post.image.url(:medium), class: "img-responsive" %>
								</div>
								<h4><%= post.title %></h4>
								<p><small>Posted on: <%= time_ago_in_words(post.created_at) %> ago - by: <%= post.user.username %></small></p>
								<p>Post type: <%= post.post_type %></p>
								<div class="post-description">
									<%= truncate(post.description, length: 100 ) %>
								</div>
								<hr>
								<div class="post-navigate">
									<%= link_to 'View ', post, class: "btn btn-xs btn-success" %>
									<%= link_to 'Edit', edit_post_path(post), class: "btn btn-xs btn-primary" %>
									<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>


	<br>

<%= link_to 'New Post', new_post_path %>
</div>

