<div class="row">
  <div class="col-md-6">
    <h3><%= @post.title %></h3>
    <hr>
    <p>
      <strong>Contract:</strong>
      <%= @post.post_type %>
      | Posted on <%= @post.created_at.strftime("%d-%m-%Y") %>
    </p>
    <div>
      <ul class="bxslider">
        <% @post.photos.each do |photo| %>
          <li>
            <%= image_tag photo.image.url %>
          </li>
        <% end %>
      </ul>
      <div id="bx-pager">
        <% 
          $i = 0;
          @post.photos.each do |thumb|
        %>
          <a data-slide-index="<%= $i %>" href=""><%= image_tag thumb.image.url(:thumb) %></a>
        <%
              $i +=1
          end
        %>  
      </div>
    </div>
  </div>
  <div class="col-md-6 show-description">
    <div class="user-detail">
      <ul>
        <li>Posted by <%= @post.user.username %></li>
        <li>Email: <%= @post.user.email %></li>
      </ul>
    </div>
    <p><strong>Description</strong></p>
    <p>
      <%= @post.description %>
    </p>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>

  </div>
</div>
